{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
		"rootDir": "src",
		"outDir": "dist",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
        "noEmit": true,
        "isolatedModules": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/*.d.ts", "dist", "node_modules"]
}
